@import 'generales.styl'

/*----------  menu de imagenes  ----------*/
.group-wrapper
  &:focus
    background _primero
.picture-group
  width 100%
  margin .5em
  flex-shrink 3
  transition all _tr_time _easinout
  cursor pointer
  
  @media media_TY
    width 60px
  
  img
    width 100%
    aspect-ratio 16 / 9
    object-fit cover
    border-radius _radius
    transition all _tr_time _easinout
    border 2px _primero solid
    animation resaltePicture _ani_time infinite alternate
    
    @media media_TY
      border-radius (_radius / 2)
    
    &:hover
      border-color _cuarto
  
  &-contenido
    display block
    height 0
    width 0
    overflow hidden
    transition all _tr_time _easinout
    font-size 0

  &.selected
    background-color _blanco
    width 100%
    flex-shrink 2
    margin 0
    margin-top -4em
    padding .5em
    border-radius (_radius * 1.5)
    border 2px _cuarto solid
    
    &.small
      flex-shrink 2.5
    
    img
      flex-shrink 0
      height 100%
      margin-right 1em
      object-fit cover
      
    @media media_TY
      flex-shrink 1
      border-radius (_radius)
      display flex
      flex-direction column
      align-items center
      height 50%
      margin-top 1em
      img
        flex-shrink 0
        width 50%
        height 50%
        margin: 0
    
    &.landscape
      flex-shrink 1
      display flex
      align-items center
      height 50%
      @media media_TY
        width auto
      img
        flex-shrink 0
        width 50%
    
    .picture-group-contenido
      display block
      height auto
      width auto
      font-size 1em

  &.viewed
    cursor default
    img
      border-color _colorClaro(_negro)
      animation none

@keyframes resaltePicture
  to
    border-color _colorMuyClaro(_primero)